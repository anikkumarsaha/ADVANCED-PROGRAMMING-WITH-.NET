
@{
    ViewBag.Title = "PendingCollectRequest";
}

<h2>PendingCollectRequest</h2>

<br />
<a href="/Restaurant/PlaceNewRequest" class="btn btn-warning">Place New Request</a>
<a href="/Restaurant/AllCollectRequest/@Session["ResId"]" class="btn btn-primary">All Requests</a>
<br />
<br />

@foreach (var item in Model)
{
    <h3 class="bg-info">Restaurant Name: @item.Restaurant.Name</h3>
    <h4>Location: @item.Restaurant.Location</h4>
    <h4>Status: @item.Status</h4>
    foreach (var i in item.FoodDetails)
    {
        <h4>Food Name: @i.Name</h4>
        <h4>Food Amount: @i.Amount</h4>
        <a href="/Restaurant/Edit/@i.Id" class="btn btn-success">Edit</a>
        <a href="/Restaurant/Delete/@i.Id" class="btn btn-danger">Delete</a>
    }
}