
@{
    ViewBag.Title = "AssignEmployees";
}

<h2>AssignEmployees</h2>

<form action="" method="post">
    <table class="table table-bordered text-center">
        <tr class="bg-info">
            <td>Employee Names</td>
            <td>Locations</td>
        </tr>

        @foreach (var cs in Model)
        {
            <tr>
                <td><input type="checkbox" name="Employees[]" value="@cs.Id" class="form-inline" /> @cs.Name</td>
                <td>@cs.Location</td>
            </tr>
        }
    </table>
    <input type="submit" value="Assign" class="btn btn-success" />
</form>